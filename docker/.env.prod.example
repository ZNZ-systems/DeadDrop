# Domain â€” used by Caddy for automatic HTTPS
DOMAIN=deaddrop.example.com

# Database
POSTGRES_USER=deaddrop
POSTGRES_PASSWORD=CHANGE_ME_TO_A_STRONG_PASSWORD
POSTGRES_DB=deaddrop
DATABASE_URL=postgres://${POSTGRES_USER}:${POSTGRES_PASSWORD}@db:5432/${POSTGRES_DB}?sslmode=disable

# App
PORT=8080
SECURE_COOKIES=true
BASE_URL=https://${DOMAIN}
SESSION_MAX_AGE_HOURS=72

# Rate limiting
RATE_LIMIT_RPS=2
RATE_LIMIT_BURST=5

# SMTP (defaults to bundled local relay; set SMTP_ENABLED=false to disable)
SMTP_ENABLED=true
SMTP_HOST=smtp-relay
SMTP_PORT=25
SMTP_USER=
SMTP_PASS=
SMTP_FROM=deaddrop@localhost
# Optional smarthost relay for hosts that cannot deliver directly on port 25.
RELAYHOST=
RELAYHOST_USERNAME=
RELAYHOST_PASSWORD=
